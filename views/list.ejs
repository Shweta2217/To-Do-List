<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% NewItem.forEach(function(item){ %>
            <form action="/del" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%= item._id %>">
                <input type="hidden" name="titleName" value="<%=listTitle%>">              
                <p> <%= item.name %></p>                
            </div> 
            </form>
        <% }); %>

        
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="addBtn"value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include("footer") -%> 
